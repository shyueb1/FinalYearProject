<div class="row">
  <div class="card col-lg-6 col-md-6 col-sm-12" >
    <div id="carouselExampleIndicators" class="carousel slide" style="" data-ride="carousel">
            <% if(images.length > 1){ %>
          <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <% for(var i = 1; i < images.length; i++){ %>
              <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
              <% } %>
          </ol>
          <% } %>
          <div class="carousel-inner">
          <% if(images != undefined && images.length > 0){ %>
                <div class="carousel-item active w-100 h-auto">
                    <img class="d-block w-75 m-auto" src="https://test123-njs.s3.eu-west-2.amazonaws.com/<%= images[0].key %>" alt="First slide">
                </div>
            <% for(var i = 1; i < images.length; i++){%>
                <div class="carousel-item w-100 h-auto">
                    <img class="d-block w-75" src="https://test123-njs.s3.eu-west-2.amazonaws.com/<%= images[i].key %>">
                </div>
              <% } %>
          <% }else{ %>
              <div class="carousel-item active">
                <img class="d-block w-100 h-auto m-auto" src="/images/noimageplaceholder.png" alt="First slide">
              </div>
          <% } %>
          </div>
          <% if(images.length > 1){ %>
          <a class="carousel-control-prev danger" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next danger" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
          </a>
          <% } %>
    </div>
    <div class="card-body">
      <h5 class="card-title title-underline">Location</h5>
      <p class="card-text">This item is located in <%= item.item_location %>.</p>
      <h5 class="card-title title-underline">Date posted</h5>
      <p class="card-text"><%= (''+item.date_posted).substring(0,25) %></p>
    </div>
  </div>
  
  <div class="card col-lg-6 col-md-6 col-sm-12 pl-5" style="border: none;">
      <h5 class="card-header" style="background-color: white !important;">Item details</h5>
      <div class="card-body">
          <h2 class="card-title"><%= item.item_name %> </h2> 
          <h5 class="card-title title-underline">Category </h5>
          <p class="card-text"> <%= item.category %>
          <br>
          <h5 class="card-title title-underline">Description</h5>
          <p class="card-text"> <%= item.description %>
      </div>
  </div>
</div>