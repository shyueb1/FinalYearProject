<div class="modal fade" id="sendmessagemodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form method="post" action="/sendmessage" onsubmit="sendMsg(); return false;">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Recipient:</label>
            <input type="text" class="form-control" id="recipient" minlength="8" maxlength="30"  name="recipient" value="" readonly>
          </div>
          <div class="form-group">
            <label for="message" class="col-form-label">Message:</label>
            <textarea class="form-control" id="message" name="message" minlength="1" maxlength="750" placeholder="Write your message here."></textarea>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button  class="submitmessagemodal btn btn-primary">Send message</button>
          </div>
        </form>
        
      </div>
    </div>
  </div>
</div>
<script>
  <% if(user){ %>
  function sendMsg(){
    setTimeout(() => {
        socket.emit('send message', {
            'sender': '<%= user.user_name %>',
            'receiver': $('#recipient').val(),
            'message': $('#message').val().trim()
        });
        $('#sendmessagemodal').modal("hide");
        $('#modalmsg').text('Your message has been sent.');
        $('#modal').modal("show");
        setTimeout(() => {
            $('#modal').modal("hide");
            // $('#modalmsg').text(' ');
            location.reload();
        }, 2000);     
    }, 500);   
  }
  <% } %>
$( "#message" ).on('input', function() {
    if ($(this).val().length==750) {
      $('#modalmsg').text('You have reached character limit of 750.');
      $('#modal').modal("show");
        setTimeout(() => {
            $('#modal').modal("hide");
        }, 2000);     
    }
});
</script>