<% include base.ejs %>
<div class="row" style="width:98%;">
    <% if(items != ''){%>
    <% items.forEach((item)=>{ %>
    <div class="col-lg-3 col-md-6 col-sm-12" style="padding-left: 50px; padding-top: 30px;">
            <div class="card" style="width: 20rem; height: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= item.item_name%></h5>
                    <p class="card-text"><%= item.description.substring(0,100) %>...</p>
                    <p class="card-text">Estimated value: Â£<%= item.est_cost %></p>
                    <p class="card-text">Posted by <%= item.user_posted %> </p>
                    <p>
                        <a href="/edit/<%= item.item_id %>"><button type="button" class="btn btn-warning btn-sm">Edit</button></a>
                        <a href="/delete/<%= item.item_id %>" onclick="verifyDeletion()"><button type="button" class="btn btn-danger btn-sm">Delete</button></a>
                    </p>
                </div>
                
            </div>
    </div>
    <% } );%>
    <% } %>
</div>
<script>
    function verifyDeletion(){
        var result = confirm('Are you sure you want to delete this item?');
        if(!result){
            window.onbeforeunload = function(){
                return;
            };
        }
    }
</script>